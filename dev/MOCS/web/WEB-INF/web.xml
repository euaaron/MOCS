<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PesquisaClienteController</servlet-name>
        <servlet-class>controller.PesquisaUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisaPratoController</servlet-name>
        <servlet-class>controller.PesquisaPratoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisaFuncionarioController</servlet-name>
        <servlet-class>controller.PesquisaFuncionarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisaComandaController</servlet-name>
        <servlet-class>controller.PesquisaComandaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManterComandaController</servlet-name>
        <servlet-class>controller.ManterComandaController</servlet-class>
        <servlet-name>ManterUsuarioController</servlet-name>
        <servlet-class>controller.ManterUsuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PesquisaClienteController</servlet-name>
        <url-pattern>/PesquisaClienteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisaPratoController</servlet-name>
        <url-pattern>/PesquisaPratoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisaFuncionarioController</servlet-name>
        <url-pattern>/PesquisaFuncionarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisaComandaController</servlet-name>
        <url-pattern>/PesquisaComandaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManterComandaController</servlet-name>
        <url-pattern>/ManterComandaController</url-pattern>
        <servlet-name>ManterUsuarioController</servlet-name>
        <url-pattern>/ManterUsuarioController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
